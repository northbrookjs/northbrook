{
  "name": "northbrook",
  "version": "3.0.1",
  "description": "A configurable tool for managing projects with NPM",
  "main": "lib/api.js",
  "jsnext:main": "src/api.js",
  "bin": {
    "northbrook": "cli.js",
    "nb": "cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/northbrookjs/northbrook.git"
  },
  "keywords": [
    "reproducible",
    "versionable",
    "pluggable",
    "monorepo",
    "lerna",
    "project",
    "management"
  ],
  "author": "Tylor Steinberger <tlsteinberger167@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/northbrookjs/northbrook/issues"
  },
  "homepage": "https://github.com/northbrookjs/northbrook#readme",
  "config": {
    "ghooks": {
      "commit-msg": "node ./node_modules/.bin/validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": "@northbrook/commit-types"
    }
  },
  "scripts": {
    "build": "rimraf lib && buba -i src -o lib",
    "test": "npm run build && node cli.js run test",
    "commit": "node cli.js run commit",
    "preversion": "npm run build",
    "prerelease": "npm run build",
    "release": "node cli.js release",
    "postinstall": "npm run build && node lib/post-install.js"
  },
  "dependencies": {
    "@northbrook/commit-types": "^1.1.0",
    "buba": "^2.0.4",
    "colors": "^1.1.2",
    "commander": "^2.9.0",
    "concat-stream": "^1.5.1",
    "conventional-commits-filter": "^1.0.0",
    "conventional-commits-parser": "^1.2.3",
    "find-config": "^1.0.0",
    "fixpack": "^2.3.1",
    "git-latest-semver-tag": "^1.0.2",
    "git-raw-commits": "^1.1.2",
    "inquirer": "^1.1.2",
    "mkdirp": "^0.5.1",
    "shelljs": "^0.7.3",
    "simple-spinner": "0.0.5",
    "symlink-or-copy": "^1.1.6"
  },
  "devDependencies": {
    "babel-preset-power-assert": "^1.0.0",
    "eslint": "^3.3.1",
    "eslint-config-standard": "^6.0.0",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "ghooks": "^1.3.2",
    "istanbul": "^1.1.0-alpha.1",
    "json-beautify": "^1.0.1",
    "mocha": "^3.0.2",
    "power-assert": "^1.4.1",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.5",
    "validate-commit-msg": "^2.7.0"
  }
}
